<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	 xmlns:app="http://schemas.android.com/apk/res-auto"
	 xmlns:android="http://schemas.android.com/apk/res/android"
	 android:background="?android:windowBackground"
	 android:layout_width="match_parent"
	 android:layout_height="match_parent">

  <ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

	 <LinearLayout
		  android:layout_width="match_parent"
		  android:orientation="vertical"
		  android:layout_height="match_parent">

	<include
		 android:id="@+id/subcategory_conversations"
		 layout="@layout/subcategory_conversations"/>



	 </LinearLayout>

  </ScrollView>

  <LinearLayout
		android:id="@+id/create_plan_confirmation_layout"
		android:layout_width="match_parent"
		android:layout_height="@dimen/ConfirmationButtonHeight"
		android:layout_alignParentBottom="true"
		android:layout_margin="10dp"
		android:orientation="horizontal">

	 <Button
		  android:id="@+id/categories_all"
		  app:backgroundTint="@null"
		  style="@style/ConfirmationButton"
		  android:layout_width="match_parent"
		  android:layout_height="match_parent"
		  android:layout_marginRight="5dp"
		  android:layout_weight="1"
		  android:text="@string/all"
		  android:textSize="@dimen/ConfirmationButtonTextSize" />

	 <Button
		  android:id="@+id/categories_custom"
		  style="@style/ConfirmationButton"
		  android:layout_width="match_parent"
		  android:layout_height="match_parent"
		  android:layout_marginLeft="5dp"
		  android:layout_weight="1"
		  app:backgroundTint="@null"
		  android:text="@string/custom"
		  android:textSize="@dimen/ConfirmationButtonTextSize" />
  </LinearLayout>

</RelativeLayout>