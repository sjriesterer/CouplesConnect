<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	 android:layout_width="match_parent"
	 android:layout_height="match_parent"
	 android:background="?android:windowBackground"
	 android:orientation="vertical">

  <ExpandableListView
		android:id="@+id/custom_expandable_list_view"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@+id/custom_confirmation_layout"
		android:layout_alignParentTop="true"
		android:divider="#000000"
		android:dividerHeight="2dp" />

  <LinearLayout
		android:id="@+id/custom_confirmation_layout"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="2dp"
		android:background="@color/button_bar"
		android:orientation="horizontal">

	 <Space
		  android:layout_width="0dp"
		  android:layout_height="1dp"
		  android:layout_weight="1"></Space>

	 <Button
		  android:id="@+id/custom_collapse"
		  style="@style/customButtons"
		  android:background="@drawable/ic_collapse_sel" />

	 <Space
		  android:layout_width="0dp"
		  android:layout_height="1dp"
		  android:layout_weight="1"></Space>

	 <Button
		  android:id="@+id/custom_expand"
		  style="@style/customButtons"
		  android:background="@drawable/ic_expand_sel" />

	 <Space
		  android:layout_width="0dp"
		  android:layout_height="1dp"
		  android:layout_weight="1"></Space>

	 <Button
		  android:id="@+id/custom_ok"
		  style="@style/customButtons"
		  android:background="@drawable/ic_check_sel" />

	 <Space
		  android:layout_width="0dp"
		  android:layout_height="1dp"
		  android:layout_weight="1"></Space>

  </LinearLayout>

</RelativeLayout>