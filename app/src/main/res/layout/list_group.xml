<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	 android:layout_width="match_parent"
	 android:padding="10dp"
	 android:id="@+id/custom_elv_group"
	 android:layout_height="wrap_content"
	 android:orientation="horizontal">

  <CheckBox
		android:id="@+id/custom_elv_group_checkbox"
		android:layout_width="wrap_content"
		android:focusable="false"
		android:layout_marginLeft="30dp"
		android:layout_height="wrap_content" />

  <ImageView
		android:id="@+id/custom_elv_group_icon"
		android:layout_width="25dp"
		android:layout_height="25dp"
		android:layout_gravity="center_vertical"
		android:src="@drawable/im_religion" />

  <TextView
		android:id="@+id/custom_elv_group_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:textStyle="bold"
		android:layout_marginLeft="10dp"
		android:text="This is a group heading"

		/>

</LinearLayout>