<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:tools="http://schemas.android.com/tools"
	 android:layout_width="match_parent"
	 android:layout_height="match_parent"
	 android:background="#F9F6FA"
	 tools:context=".fragments.FragmentCategories">

  <ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

	 <LinearLayout
		  android:layout_width="match_parent"
		  android:layout_height="match_parent"
		  android:layout_marginLeft="30dp"
		  android:layout_marginRight="30dp"
		  android:orientation="vertical">

		<!--		Title-->
		<LinearLayout
			 android:layout_width="match_parent"
			 android:layout_height="wrap_content"
			 android:id="@+id/categories_title"
			 android:orientation="vertical">

		  <TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:paddingTop="30dp"
				android:paddingRight="30dp"
				android:text="Couples"
				android:textSize="25sp" />

		  <TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:paddingLeft="30dp"
				android:paddingBottom="30dp"
				android:text="Connect"
				android:textSize="25sp" />
		</LinearLayout>

		<!--  Top Row-->
		<LinearLayout
			 android:layout_width="match_parent"
			 android:layout_height="wrap_content"
			 android:orientation="horizontal">

		  <!--		Conversations-->
		  <LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginBottom="20dp"
				android:layout_weight="1"
				android:orientation="horizontal">

			 <RelativeLayout
				  style="@style/CategoryFrame"
				  android:background="@drawable/category_conversations_sel">

				<TextView
					 android:id="@+id/categories_conversations"
					 style="@style/CategoryHeading"
					 android:background="@drawable/category_conversations_sel"
					 android:text="@string/category0" />

				<ImageView
					 style="@style/CategoryIcon"
					 android:src="@drawable/im_conversations" />
			 </RelativeLayout>

		  </LinearLayout>

		  <!-- Dates & Fun-->
		  <LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginBottom="20dp"
				android:layout_weight="1"
				android:orientation="horizontal">

			 <RelativeLayout
				  style="@style/CategoryFrame"
				  android:background="@drawable/category_conversations_sel">

				<TextView
					 android:id="@+id/categories_dates"
					 style="@style/CategoryHeading"
					 android:background="@drawable/category_dates_sel"
					 android:text="@string/category1" />

				<ImageView
					 style="@style/CategoryIcon"
					 android:src="@drawable/im_dates" />
			 </RelativeLayout>

		  </LinearLayout>

		</LinearLayout>

		<!--  Second Row-->
		<LinearLayout
			 android:layout_width="match_parent"
			 android:layout_height="wrap_content"
			 android:orientation="horizontal">

		  <!--		Intimacy Builder-->
		  <LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginBottom="20dp"
				android:layout_weight="1"
				android:orientation="horizontal">

			 <RelativeLayout
				  style="@style/CategoryFrame"
				  android:background="@drawable/category_conversations_sel">

				<TextView
					 android:id="@+id/categories_intimacy"
					 style="@style/CategoryHeading"
					 android:background="@drawable/category_intimacy_sel"
					 android:text="@string/category2" />

				<ImageView
					 style="@style/CategoryIcon"
					 android:src="@drawable/im_intimacy" />
			 </RelativeLayout>

		  </LinearLayout>

		  <!--		Sensual-->
		  <LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginBottom="20dp"
				android:layout_weight="1"
				android:orientation="horizontal">

			 <RelativeLayout
				  style="@style/CategoryFrame"
				  android:background="@drawable/category_conversations_sel">

				<TextView
					 android:id="@+id/categories_sensual"
					 style="@style/CategoryHeading"
					 android:background="@drawable/category_sensual_sel"
					 android:text="@string/category3" />

				<ImageView
					 style="@style/CategoryIcon"
					 android:src="@drawable/im_sensual" />
			 </RelativeLayout>

		  </LinearLayout>

		</LinearLayout>

		<!--  Third Row-->
		<LinearLayout
			 android:layout_width="match_parent"
			 android:layout_height="wrap_content"
			 android:orientation="horizontal">

		  <!--		?-->
		  <LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginBottom="20dp"
				android:layout_weight="1"
				android:orientation="horizontal">

			 <RelativeLayout
				  style="@style/CategoryFrame"
				  android:background="@drawable/category_conversations_sel">

				<TextView
					 android:id="@+id/categories_4"
					 style="@style/CategoryHeading"
					 android:background="@drawable/category_intimacy_sel"
					 android:text="@string/category2" />

				<ImageView
					 style="@style/CategoryIcon"
					 android:src="@drawable/im_intimacy" />
			 </RelativeLayout>

		  </LinearLayout>

		  <!--		Custom -->
		  <LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginBottom="20dp"
				android:layout_weight="1"
				android:orientation="horizontal">

			 <RelativeLayout
				  style="@style/CategoryFrame"
				  android:background="@drawable/category_conversations_sel">

				<TextView
					 android:id="@+id/categories_custom"
					 style="@style/CategoryHeading"
					 android:background="@drawable/category_conversations_sel"
					 android:text="@string/custom" />

				<ImageView
					 style="@style/CategoryIcon"
					 android:src="@drawable/im_conversations" />
			 </RelativeLayout>

		  </LinearLayout>

		</LinearLayout>
	 </LinearLayout>

  </ScrollView>

</RelativeLayout>